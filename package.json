{
  "name": "line-diff-action",
  "version": "1.1",
  "private": true,
  "description": "A GitHub action that displays the line differences between HEAD and a given commit hash",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest > results.txt",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ILikePlayingGames/line-diff-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "ILikePlayingGames",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/tool-cache": "^2.0.1",
    "diff-so-fancy": "^1.4.3"
  },
  "devDependencies": {
    "@types/node": "^18.14.1",
    "@typescript-eslint/parser": "^5.53.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.34.0",
    "eslint-plugin-github": "^4.6.1",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.4.3",
    "js-yaml": "^4.1.0",
    "prettier": "2.8.4",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  }
}
